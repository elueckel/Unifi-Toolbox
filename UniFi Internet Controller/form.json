        },
        {
            "type": "CheckBox",
            "name": "WAN2availability",
            "caption": "WAN2 availability"
        },
        {
            "type": "CheckBox",
            "name": "WAN2latency_average",
            "caption": "WAN2 latency-average"
        },
        {
            "type": "CheckBox",
            "name": "WAN2time_period",
            "caption": "WAN2 time-period"
        },
        {
            "type": "CheckBox",
            "name": "isp_name",
            "caption": "ISP Name"
        },
        {
            "type": "CheckBox",
            "name": "isp_organization",
            "caption": "ISP Organization"
        },
        {
            "type": "CheckBox",
            "name": "version",
