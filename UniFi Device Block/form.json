{
    "elements": [
        {
            "type": "Label",
            "label": "UniFi Toolbox - Internet Controller Configuration"
        },
        {
            "type": "Label",
            "label": "Please enter your credentials, ip-adress and port to your UniFi Controller."
        },
        {
            "type": "Select",
            "name": "ControllerType",
            "caption": "Controller Type",
            "options": [
                {
                    "caption": "Dream Maschine / Pro / CloudKey V2",
                    "value": 0
                },
                {
                    "caption": "CloudKey",
                    "value": 1
                }
            ]
        },
        {
            "type": "ValidationTextBox",
            "name": "Site",
            "caption": "Site"
        },
        {
            "type": "ValidationTextBox",
            "name": "ServerAdress",
            "caption": "Server Adress"
        },
        {
            "type": "NumberSpinner",
            "name": "ServerPort",
            "caption": "Server Port"
        },
        {
            "type": "ValidationTextBox",
            "name": "UserName",
            "caption": "User Name"
        },
        {
            "type": "PasswordTextBox",
            "name": "Password",
            "caption": "Password"
        },
        {
            "type": "List",
            "name": "Devices",
            "caption": "Devices",
            "rowCount": 10,
            "add": true,
            "delete": true,
            "sort": {
                "column": "varDeviceName",
                "direction": "ascending"
            },
            "columns": [
                {
                    "label": "Devicename",
                    "name": "varDeviceName",
                    "width": "200px",
                    "add": "Name",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                },
                {
                    "label": "MAC",
                    "name": "varDeviceMAC",
                    "width": "120px",
                    "add": "00:00:00:00:00",
                    "edit": {
                        "type": "ValidationTextBox"
                    }
                }
            ],
            "values": []
        }
    ],
    "actions": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Button",
                    "label": "Test Authentication and Blocking",
                    "onClick": "DB_AuthenticateAndProcessRequest($id);"
                }
            ]
        }
    ],
    "status": []
}