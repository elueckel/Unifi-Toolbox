        },
        {
            "type": "CheckBox",
            "name": "update_available",
            "caption": "Update available"
        },
        {
            "type": "CheckBox",
            "name": "update_downloaded",
            "caption": "Update downloaded"
        },
        {
            "type": "CheckBox",
            "name": "uptime",
